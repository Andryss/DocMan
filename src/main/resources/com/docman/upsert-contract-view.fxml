<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.docman.UpsertContractViewController">
   <children>
      <GridPane alignment="TOP_CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Номер договора" />
            <Label text="Дата открытия" GridPane.rowIndex="1" />
            <Label text="Дата закрытия" GridPane.rowIndex="2" />
            <Label text="Полная сумма" GridPane.rowIndex="3" />
            <TextField fx:id="numberTextField" GridPane.columnIndex="1" />
            <DatePicker fx:id="openDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <DatePicker fx:id="closeDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="totalValueTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         </children>
      </GridPane>
      <HBox alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#onSave" prefWidth="80.0" text="Сохранить" />
            <Button mnemonicParsing="false" onAction="#onCancel" prefWidth="80.0" text="Отмена" />
         </children>
      </HBox>
   </children>
</VBox>
